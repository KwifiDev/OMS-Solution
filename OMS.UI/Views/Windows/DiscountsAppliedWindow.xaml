<Window x:Class="OMS.UI.Views.Windows.DiscountsAppliedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:windows="clr-namespace:OMS.UI.ViewModels.Windows"
        xmlns:converters="clr-namespace:OMS.UI.Converters"
        xmlns:windowBehaviors="clr-namespace:OMS.UI.Behaviors.Windows"
        xmlns:inputBehaviors="clr-namespace:OMS.UI.Behaviors.Inputs"
        xmlns:local="clr-namespace:OMS.UI.Views.Windows" 
        d:DataContext="{d:DesignInstance Type=windows:DiscountsAppliedViewModel}"
        mc:Ignorable="d"
        Height="400" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/BranchDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolean"/>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Behaviors>
        <windowBehaviors:DragWindowBehavior/>
    </i:Interaction.Behaviors>

    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Height="25"
                                Foreground="White"
                                Command="{Binding CloseCommand}">
            <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15"/>
        </Button>



        <Label x:Name="lblTitle"
               Grid.Row="1"
               Style="{StaticResource MaterialDesignLabel}"
               FontWeight="Bold" 
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="24"
               Content="قائمة الخصومات"
               Background="{StaticResource PageHeaderGradient}"
               Foreground="White"/>

        <DataGrid Name="dataGrid"
          Grid.Row="2"
          ItemsSource="{Binding Items}"
          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False"
          EnableRowVirtualization="True"
          EnableColumnVirtualization="True"
          VirtualizingPanel.ScrollUnit="Pixel"
          AlternationCount="2"
          AlternatingRowBackground="{DynamicResource MaterialDesignAlternateBackground}"
          RowBackground="{DynamicResource MaterialDesignBackground}"
          ColumnWidth="*"
          BorderThickness="3"
          BorderBrush="AliceBlue"
          RowHeight="40"
          FontSize="14"
          Margin="2"
          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          materialDesign:DataGridAssist.CellPadding="8 4"
          materialDesign:DataGridAssist.ColumnHeaderPadding="16 8"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.IsDeferredScrollingEnabled="True"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          KeyboardNavigation.TabNavigation="Once">

            <!-- أنماط الصفوف -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignBackground}"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="SteelBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>



            <!-- الأعمدة -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الخصم" Binding="{Binding DiscountId}" />
                <DataGridTextColumn Header="اسم الخدمة" Binding="{Binding ServiceName}" />
                <DataGridTextColumn Header="سعر الخدمة" Binding="{Binding ServicePrice, StringFormat={}{0:0}}" />
                <DataGridTextColumn Header="نوع العميل" Binding="{Binding ClientType}" />
                <DataGridTextColumn Header="الخصم" Binding="{Binding Discount}" />
            </DataGrid.Columns>

            <!-- القائمة السياقية -->
            <DataGrid.ContextMenu>
                <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">
                    <MenuItem Header="إضافة خصم" 
                      Command="{Binding AddItemCommand}"
                      Icon="{materialDesign:PackIcon Kind=Discount}"/>

                    <MenuItem Header="تعديل الخصم" 
                      Command="{Binding EditItemCommand}" 
                      CommandParameter="{Binding SelectedItem}"
                      Icon="{materialDesign:PackIcon Kind=DiscountBoxOutline}"/>

                    <MenuItem Header="حذف الخصم" 
                      Command="{Binding DeleteItemCommand}" 
                      CommandParameter="{Binding SelectedItem}"
                      Icon="{materialDesign:PackIcon Kind=SelectRemove}"
                      Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>

                    <Separator Style="{StaticResource MaterialDesignSeparator}"/>

                    <MenuItem Header="تحديث" 
                      Command="{Binding LoadDataCommand}"
                      Icon="{materialDesign:PackIcon Kind=Refresh}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>



        <TextBlock Text="ليس هناك أي خصومات على هذه الخدمة"
               Grid.Row="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="30"
               Foreground="{DynamicResource MaterialDesignBodyLight}"
               Visibility="{Binding HasItems, ElementName=dataGrid, Converter={StaticResource InverseBoolean}}"/>

    </Grid>


</Window>
