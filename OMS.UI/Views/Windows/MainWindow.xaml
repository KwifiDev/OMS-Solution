<Window x:Class="OMS.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:OMS.UI.Views" 
        xmlns:ViewModels="clr-namespace:OMS.UI.ViewModels.Windows" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:windowBehaviors="clr-namespace:OMS.UI.Behaviors.Windows"
        xmlns:navBehaviors="clr-namespace:OMS.UI.Behaviors.Navigation"
        xmlns:converters="clr-namespace:OMS.UI.Converters"
        d:DataContext="{d:DesignInstance Type=ViewModels:MainWindowViewModel}"
        mc:Ignorable="d"
        Height="650" 
        Width="1000"
        MinHeight="650" 
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        WindowStyle="None"
        AllowsTransparency="True"
        Icon="{DynamicResource AppIcon}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:VisiblilityUIConverter x:Key="BooleanToVisibility"/>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Grid -->
    <Grid>
        <!-- App Bar -->
        <DockPanel Style="{StaticResource AppBarDockPanel}">

            <i:Interaction.Behaviors>
                <windowBehaviors:DragWindowBehavior/>
            </i:Interaction.Behaviors>
            
            <!-- Left Section -->
            <StackPanel Style="{StaticResource LeftHeaderPanel}">
                <materialDesign:PackIcon Kind="OfficeBuilding" 
                                       Foreground="White" 
                                       Width="50" 
                                       Height="50"
                                       Margin="0 0 10 0"/>
                <TextBlock Text="نظام إدارة المكاتب" 
                         FontSize="20"
                         Foreground="White"
                         VerticalAlignment="Center"
                         FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Window Controls -->
            <StackPanel Style="{StaticResource WindowControlsPanel}">
                <Button Width="25" Height="25"
                      Style="{StaticResource MaterialDesignIconButton}"
                      Foreground="White"
                      ToolTip="تصغير"
                      Command="{Binding MinimizeCommand}">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="15" Height="15"/>
                </Button>
                <Button Width="25" Height="25"
                      Style="{StaticResource MaterialDesignIconButton}"
                      Foreground="White"
                      ToolTip="تكبير"
                      Command="{Binding MaximizeCommand}">
                    <materialDesign:PackIcon Kind="WindowMaximize" Width="15" Height="15"/>
                </Button>
                <Button Width="25" Height="25" 
                      Style="{StaticResource MaterialDesignIconButton}"
                      Foreground="White"
                      ToolTip="إغلاق"
                      Command="{Binding ExitCommand}">
                    <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15"/>
                </Button>
            </StackPanel>

            <!-- User Profile -->
            <Menu HorizontalAlignment="Right" 
                Margin="0 5 20 0">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <MenuItem FontSize="12" 
                          Header="{Binding CurrentUser.FullName ,FallbackValue='اسم الموظف هنا'}" 
                          Foreground="White"
                          FontWeight="Bold">
                    
                    <MenuItem.Icon>
                        <materialDesign:PackIcon VerticalAlignment="Stretch"
                                                 HorizontalAlignment="Right"
                                                 Width="50" 
                                                 Height="50"
                                                 Margin="-15"
                                                 Kind="AccountCircle"/>
                    </MenuItem.Icon>
                    <MenuItem Header="تعديل الملف الشخصي"
                           Style="{StaticResource MaterialDesignMenuItem}"
                           Background="#34495E"
                           FontSize="12"
                           FontWeight="Light"
                           Command="{Binding EditUserCommand}"/>

                    <MenuItem Header="تغيير كلمة المرور"
                              Style="{StaticResource MaterialDesignMenuItem}"
                              Background="#34495E"
                              FontSize="12"
                              FontWeight="Light"
                              Command="{Binding ChangeUserPasswordCommand}"/>

                    <MenuItem Header="تسجيل الخروج"
                           Style="{StaticResource MaterialDesignMenuItem}"
                           Background="#34495E"
                           FontSize="12"
                           FontWeight="Light"
                           Command="{Binding LogoutCommand}"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <!-- Main Content -->
        <Grid Margin="0 60 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Style="{StaticResource NavigationBorder}">
                <StackPanel>
                    <Border Style="{StaticResource NavigationHeader}" Margin="0 10 0 0">
                        <TextBlock Text="القائمة الرئيسية" 
                               FontSize="18"
                               Foreground="White"
                               Margin="20 10"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Navigation Items -->
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenDashboardCommand}"
                            Margin="3 3 3 3"
                            Visibility="{Binding DashboardButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Left" 
                                  Width="180">
                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                   Width="28" 
                                                   Height="28" 
                                                   Margin="10"/>
                            <TextBlock Text="لوحة المعلومات" 
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenRevenuesCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding RevenuesButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Left" 
                                    Width="180">
                            <materialDesign:PackIcon Kind="ReportTree" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Margin="10"/>
                            <TextBlock Text="العائدات" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenPeopleCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding PeopleButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"  
                                  Width="180">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                   Width="28" 
                                                   Height="28" 
                                                   Margin="10"/>
                            <TextBlock Text="الأشخاص" 
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenBranchesCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding BranchesButtonVisibility, Converter={StaticResource BooleanToVisibility}}">

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"  
                                    Width="180">
                            <materialDesign:PackIcon Kind="Building" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Margin="10"/>
                            <TextBlock Text="الفروع" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenUsersCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding UsersButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"  
                                    Width="180">
                            <materialDesign:PackIcon Kind="AccountCircle" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Margin="10"/>
                            <TextBlock Text="الموظفين" 
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenServicesCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding ServicesButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"  
                                    Width="180">
                                                <materialDesign:PackIcon Kind="Category" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Margin="10"/>
                                                <TextBlock Text="الخدمات" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenClientsCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding ClientsButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"  
                                    Width="180">
                            
                            <materialDesign:PackIcon Kind="Account" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Margin="10"/>
                            
                            <TextBlock Text="العملاء" 
                                       VerticalAlignment="Center"/>
                            
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding OpenSettingsCommand}"
                            Margin="3 0 3 3"
                            Visibility="{Binding SettingsButtonVisibility, Converter={StaticResource BooleanToVisibility}}">
                        
                            
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"  
                                  Width="180">
                            <materialDesign:PackIcon Kind="Cog" 
                                                   Width="28" 
                                                   Height="28" 
                                                   Margin="10"/>
                            <TextBlock Text="الإعدادات" 
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Frame -->
            <Frame Grid.Column="1"
               x:Name="mainFrame"
               navBehaviors:NavigationServiceBehavior.RegisterFrame="True"
               NavigationUIVisibility="Hidden">


                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadDataCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </Frame>


        </Grid>
    </Grid>

</Window>