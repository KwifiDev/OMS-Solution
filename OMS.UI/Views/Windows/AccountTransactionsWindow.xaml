<Window x:Class="OMS.UI.Views.Windows.AccountTransactionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:OMS.UI.Views.Windows" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:converters="clr-namespace:OMS.UI.Converters"
        xmlns:windows="clr-namespace:OMS.UI.ViewModels.Windows" 
        xmlns:windowBehaviors="clr-namespace:OMS.UI.Behaviors.Windows"
        xmlns:userControls="clr-namespace:OMS.UI.Views.UserControls"
        d:DataContext="{d:DesignInstance Type=windows:AccountTransactionsViewModel}"
        mc:Ignorable="d"
        Height="330" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        ResizeMode="NoResize"
        WindowStyle="None"
        Icon="{DynamicResource AppIcon}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/BranchDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolean"/>
            <converters:VisiblilityUIConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Behaviors>
        <windowBehaviors:DragWindowBehavior/>
    </i:Interaction.Behaviors>

    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>


        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Height="25"
                                Foreground="White"
                                Command="{Binding CloseCommand}">
            <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15"/>
        </Button>

        <Grid Background="{StaticResource PageHeaderGradient}" Grid.Row="1">

            <DockPanel LastChildFill="False">

                <userControls:PaginationControl DockPanel.Dock="Right"
                                                FlowDirection="LeftToRight"
                                                PaginationInfo="{Binding PaginationInfo}"
                                                IsEnabled="{Binding LoadingService.IsWaiting}"/>

                <Label  Style="{StaticResource MaterialDesignLabel}"
                        FontWeight="Bold" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontSize="24"
                        Content="جميع الحركات"
                        Foreground="White"
                        Padding="20,0"/>

            </DockPanel>
            
            </Grid>

               

        <DataGrid Name="dataGrid"
          Grid.Row="2"
          ItemsSource="{Binding TransactionsSummaryItems}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False"
          EnableRowVirtualization="True"
          EnableColumnVirtualization="True"
          VirtualizingPanel.ScrollUnit="Pixel"
          AlternationCount="2"
          AlternatingRowBackground="{DynamicResource MaterialDesignAlternateBackground}"
          RowBackground="{DynamicResource MaterialDesignBackground}"
          ColumnWidth="*"
          BorderThickness="3"
          BorderBrush="AliceBlue"
          RowHeight="40"
          FontSize="14"
          Margin="2"
          HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
          materialDesign:DataGridAssist.CellPadding="8 4"
          materialDesign:DataGridAssist.ColumnHeaderPadding="8 4"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.IsDeferredScrollingEnabled="True"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          KeyboardNavigation.TabNavigation="Once">

            <!-- Style for Column Headers -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignColumnHeaderBackground}" />
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignColumnHeaderForeground}" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Style for Cells -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </DataGrid.CellStyle>

            <!-- Style for Rows -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignBackground}"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="DGR_Border"
                                        Background="{TemplateBinding Background}"
                                        SnapsToDevicePixels="True">
                                    <SelectiveScrollingGrid>
                                        <SelectiveScrollingGrid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </SelectiveScrollingGrid.ColumnDefinitions>

                                        <DataGridCellsPresenter Grid.Column="1"
                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                        <DataGridRowHeader Grid.Column="0"
                                                   SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                   Visibility="{Binding HeadersVisibility, 
                                                   ConverterParameter={x:Static DataGridHeadersVisibility.Row},
                                                   Converter={x:Static DataGrid.HeadersVisibilityConverter}, 
                                                   RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                    </SelectiveScrollingGrid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="Focusable" Value="False"/>
                    <!-- إزالة تنسيق التحديد -->
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="SteelBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم المناقلة" Binding="{Binding Id}" />
                <DataGridTextColumn Header="نوع المناقلة" Binding="{Binding TransactionTypeDisplay}" />
                <DataGridTextColumn Header="الرصيد" Binding="{Binding Amount, StringFormat={}{0:0}}" />
                <DataGridTextColumn Header="بتاريخ" Binding="{Binding CreatedAt}" />
                <DataGridTextColumn Width="2*" Header="ملاحظات" Binding="{Binding NotesDisplay}" />
            </DataGrid.Columns>
        </DataGrid>


        <TextBlock Text="ليس هناك أي مناقلات على هذا الحساب"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                   Visibility="{Binding HasItems, ElementName=dataGrid, Converter={StaticResource InverseBoolean}}"/>

        <Border Background="#BFFFFFFF"
                Visibility="{Binding LoadingService.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Row="2">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Height="5"
                                 IsIndeterminate="True"
                                 Style="{StaticResource MaterialDesignLinearProgressBar}"
                                 Background="BlueViolet"
                                 Foreground="Indigo">
                        <ProgressBar.Effect>
                            <BlurEffect Radius="5"/>
                        </ProgressBar.Effect>
                        <ProgressBar.Clip>
                            <RectangleGeometry Rect="0,0,130,5" RadiusX="5" RadiusY="3"/>
                        </ProgressBar.Clip>
                    </ProgressBar>
                    <TextBlock Text="جاري تحميل البيانات..."
                               Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                               Margin="0 10 0 0"
                               FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>

</Window>
