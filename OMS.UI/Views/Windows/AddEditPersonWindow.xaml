<Window x:Class="OMS.UI.Views.Windows.AddEditPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:converters="clr-namespace:OMS.UI.Converters"
        xmlns:local="clr-namespace:OMS.UI.Views.Windows" 
        xmlns:windows="clr-namespace:OMS.UI.ViewModels.Windows" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:customBehaviors="clr-namespace:OMS.UI.Behaviors"
        d:DataContext="{d:DesignInstance Type=windows:AddEditPersonViewModel}"
        mc:Ignorable="d"
        Height="350" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PersonDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:GenderPhotoConverter x:Key="GenderImage"/>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding DragWindowCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTitle"
            Style="{StaticResource MaterialDesignLabel}"
            FontWeight="Bold" 
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="24"
            Content="{Binding Status.Title, FallbackValue=نمط العملية}"
            Background="{StaticResource PageHeaderGradient}"
            Grid.ColumnSpan="5"
            Foreground="White"/>

        <Border Grid.Row="1" Grid.RowSpan="2" 
                Style="{StaticResource PhotoBorder}" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="32 0 32 0">
            
            <materialDesign:PackIcon 
                                    Kind="{Binding Person.Gender, Converter={StaticResource GenderImage}}" 
                                    Width="56"
                                    Height="56"
                                    Foreground="{StaticResource MaterialDesignShadowBrush}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
        </Border>

        <Border Padding="10"
             Background="{Binding Status.Color}"
             VerticalAlignment="Top"
             Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4">
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <TextBlock Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Text="رقم المعرف:"
                        FontWeight="Bold"
                        Foreground="White"
                        FontSize="16"/>

                <TextBlock Text="{Binding Person.PersonIdDisplay, FallbackValue='لا يوجد'}"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        FontSize="16"/>
            </StackPanel>
        </Border>

        <TextBox Name="txtFirstName" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              Text="{Binding Person.FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
              FontSize="16"
              Margin="10,5,10,5"
              Grid.Row="3" Grid.Column="0"
              materialDesign:HintAssist.Hint="الاسم الأول"
              IsEnabled="{Binding Status.IsModifiable}"/>

        <TextBox Name="txtLastName"
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              Text="{Binding Person.LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
              FontSize="16"
              Margin="10,5,10,5"
              Grid.Row="4" Grid.Column="0"
              materialDesign:HintAssist.Hint="النسب"
              IsEnabled="{Binding Status.IsModifiable}">
        </TextBox>


        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              Text="{Binding Person.Phone}"
              FontSize="16"
              Margin="10,5,10,5"
              Grid.Row="3" Grid.Column="1"
              materialDesign:HintAssist.Hint="الهاتف"
              IsEnabled="{Binding Status.IsModifiable}">
            
            <i:Interaction.Behaviors>
                <customBehaviors:NumericInputBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
               ItemsSource="{Binding Genders}"
               DisplayMemberPath="DisplayMember"
               SelectedValuePath="Value"
               SelectedValue="{Binding Person.Gender}"
               Height="40"
               FontSize="16" 
               Margin="10,10,10,0"
               Padding="15 0"
               Grid.Row="4" Grid.Column="1"
               materialDesign:HintAssist.Hint="الجنس"
               IsEnabled="{Binding Status.IsModifiable}">
        </ComboBox>

        <Button x:Name="btnSave"
             Grid.Row="5"
             Style="{StaticResource MaterialDesignOutlinedDarkButton}"
             Width="120"
             Content="{Binding Status.ClickContent, FallbackValue=اضافة}"
             Command="{Binding SavePersonCommand}"
             IsEnabled="{Binding Status.IsModifiable}">
        </Button>

        <Button
                Grid.Row="5"
                Grid.Column="2"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                Width="120"
                Content="اغلاق"
                Command="{Binding CloseCommand}">
        </Button>

    </Grid>



</Window>
