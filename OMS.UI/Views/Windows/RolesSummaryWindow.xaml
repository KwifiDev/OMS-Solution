<Window x:Class="OMS.UI.Views.Windows.RolesSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:windows="clr-namespace:OMS.UI.ViewModels.Windows"
        xmlns:converters="clr-namespace:OMS.UI.Converters"
        xmlns:windowBehaviors="clr-namespace:OMS.UI.Behaviors.Windows"
        xmlns:inputBehaviors="clr-namespace:OMS.UI.Behaviors.Inputs"
        xmlns:local="clr-namespace:OMS.UI.Views.Windows" 
        xmlns:userControls="clr-namespace:OMS.UI.Views.UserControls"
        d:DataContext="{d:DesignInstance Type=windows:RolesSummaryViewModel}"
        mc:Ignorable="d"
        Height="500" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        ResizeMode="NoResize"
        WindowStyle="None"
        Icon="{DynamicResource AppIcon}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/BranchDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolean"/>
            <converters:VisiblilityUIConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Behaviors>
        <windowBehaviors:DragWindowBehavior/>
    </i:Interaction.Behaviors>

    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Height="25"
                                Foreground="White"
                                Command="{Binding CloseCommand}">
            <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15"/>
        </Button>



        <Grid Background="{StaticResource PageHeaderGradient}" Grid.Row="1">

            <DockPanel LastChildFill="False">

                <userControls:PaginationControl DockPanel.Dock="Right"
                              FlowDirection="LeftToRight"
                              PaginationInfo="{Binding PaginationInfo}"/>

                <Label
                     Style="{StaticResource MaterialDesignLabel}"
                     FontWeight="Bold" 
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="24"
                     Content="قائمة الادوار"
                     Foreground="White"
                     Padding="20,0"/>

            </DockPanel>

        </Grid>

        <Grid Grid.Row="2">
       
            <DataGrid Name="dataGrid"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  AlternationCount="2"
                  AlternatingRowBackground="{DynamicResource MaterialDesignAlternateBackground}"
                  RowBackground="{DynamicResource MaterialDesignBackground}"
                  ColumnWidth="*"
                  BorderThickness="3"
                  BorderBrush="AliceBlue"
                  RowHeight="100"
                  FontSize="14"
                  Margin="2"
                  HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                  VerticalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                  materialDesign:DataGridAssist.CellPadding="8 4"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="16 8"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.IsDeferredScrollingEnabled="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  KeyboardNavigation.TabNavigation="Once">

            <!-- أنماط الصفوف -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{DynamicResource MaterialDesignBackground}"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="SteelBlue"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>



                <!-- الأعمدة -->
            <DataGrid.Columns>

                    <DataGridTemplateColumn Header="الرقم" Width="65">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="اسم الدور">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RoleName}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="المستخدمين">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding UsersCount}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="كل المستخدمين" Width="1.1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalUsers}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="نسبة المستخدمين" Width="1.2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PercentageOfUsers}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="الصلاحيات" Width="0.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ClaimsCount}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="انواع المطالبات" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayClaimTypes}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                
                    <DataGridTemplateColumn Header="قيم المطالبات" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayClaimValues}" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="{Binding DisplayClaimValues}" 
                                                       TextWrapping="Wrap" 
                                                       MaxWidth="200"/>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            <!-- القائمة السياقية -->
            <DataGrid.ContextMenu>
                <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">

                        <MenuItem Header="المطالبات" 
                                  Command="{Binding ShowDetailsCommand}"
                                  Icon="{materialDesign:PackIcon Kind=ClapperboardCog}"/>

                        <MenuItem Header="إضافة دور" 
                              Command="{Binding AddItemCommand}"
                              Icon="{materialDesign:PackIcon Kind=ShoppingCartAdd}"/>

                    <MenuItem Header="تعديل الدور" 
                              Command="{Binding EditItemCommand}" 
                              CommandParameter="{Binding SelectedItem}"
                              Icon="{materialDesign:PackIcon Kind=ShoppingCart}"/>

                        <MenuItem Header="حذف الدور" 
                              Command="{Binding DeleteItemCommand}" 
                              CommandParameter="{Binding SelectedItem}"
                              Icon="{materialDesign:PackIcon Kind=ShoppingCartRemove}"
                              Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>

                        <Separator Style="{StaticResource MaterialDesignSeparator}"/>

                        <MenuItem Header="تحديث" 
                              Command="{Binding LoadDataCommand}"
                              Icon="{materialDesign:PackIcon Kind=Refresh}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
      
            <TextBlock Text="ليس هناك أي ادوار مثبتة"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="30"
               Foreground="{DynamicResource MaterialDesignBodyLight}"
               Visibility="{Binding HasItems, ElementName=dataGrid, Converter={StaticResource InverseBoolean}}"/>

            <Border Background="#BFFFFFFF"
           Visibility="{Binding LoadingService.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden}"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Height="5"
                            IsIndeterminate="True"
                            Style="{StaticResource MaterialDesignLinearProgressBar}"
                            Background="BlueViolet"
                            Foreground="Indigo">
                            <ProgressBar.Effect>
                                <BlurEffect Radius="5"/>
                            </ProgressBar.Effect>
                            <ProgressBar.Clip>
                                <RectangleGeometry Rect="0,0,130,5" RadiusX="5" RadiusY="3"/>
                            </ProgressBar.Clip>
                        </ProgressBar>
                        <TextBlock Text="جاري تحميل البيانات..."
                          Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                          Margin="0 10 0 0"
                          FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
        


    </Grid>


</Window>
