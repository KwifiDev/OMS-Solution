<Window x:Class="OMS.UI.Views.Windows.PersonDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OMS.UI.Views.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:windows="clr-namespace:OMS.UI.ViewModels.Windows" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        d:DataContext="{d:DesignInstance Type=windows:PersonDetailsViewModel}"
        mc:Ignorable="d"
        Height="350" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        FlowDirection="RightToLeft"
        FontFamily="LBC"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PersonDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding DragWindowCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <materialDesign:Card UniformCornerRadius="0" FlowDirection="RightToLeft">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Gradient -->
            <materialDesign:ColorZone Mode="PrimaryMid" 
                                      Background="{StaticResource PageHeaderGradient}">


                <StackPanel>


                        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Height="25"
                                Foreground="White"
                                Command="{Binding CloseCommand}">
                            <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="15"/>
                        </Button>
                    
                    <Border>



                        <TextBlock Text="بطاقة المعلومات" 
                                   FontSize="26"
                                   Margin="24 16"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignPaper}"
                                   FontFamily="Segoe UI Semibold"/>
                    </Border>

                </StackPanel>
            </materialDesign:ColorZone>

            <!-- Content Grid -->
            <Grid Grid.Row="1" Margin="10 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Profile Section -->
                <Border Style="{StaticResource PhotoBorder}" 
                        Grid.Column="0" 
                        VerticalAlignment="Top"
                        Margin="16 0 32 0">
                        <materialDesign:PackIcon 
                        Kind="{Binding Person.Gender, Converter={StaticResource GenderImage}}" 
                        Width="56"
                        Height="56"
                        Foreground="{StaticResource MaterialDesignShadowBrush}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Border>

                <!-- Personal Info Section -->
                <StackPanel Grid.Column="1" Margin="10 0">
                    <TextBlock HorizontalAlignment="Center" Text="المعلومات الشخصية" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                    <!-- Person ID -->
                    <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DetailItem}">
                        
                        <TextBlock Text="رقم المعرف" 
                                   MinWidth="120"
                                   FontWeight="Bold"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <TextBlock Text="{Binding Person.PersonId, FallbackValue='???'}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   FontSize="16"/>
                        <Separator/>
                    </StackPanel>

                    <!-- Name -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DetailItem}">
                        
                        <TextBlock Text="الاسم الأول" 
                                   MinWidth="120"
                                   FontWeight="Bold"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <TextBlock Text="{Binding Person.FirstName, FallbackValue='???'}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   FontSize="16"/>
                        <Separator/>

                    </StackPanel>

                    <!-- Last Name -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource DetailItem}">
                        
                        <TextBlock Text="النسبة" 
                                   MinWidth="120"
                                   FontWeight="Bold"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <TextBlock Text="{Binding Person.LastName, FallbackValue='???'}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   FontSize="16"/>
                        <Separator/>


                    </StackPanel>
                </StackPanel>

                <!-- Contact Info Section -->
                <StackPanel Grid.Column="2" Margin="10 0">
                    <TextBlock HorizontalAlignment="Center" Text="معلومات اخرى" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                    <!-- Phone -->
                    <StackPanel HorizontalAlignment="Stretch"
                                Height="50"
                                Style="{StaticResource IconTextItem}">
                        
                        <materialDesign:PackIcon Kind="Phone" 
                                                 Width="30"
                                                 Height="30"
                                                 Margin="0 0 10 0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <TextBlock Text="{Binding Person.PhoneDisplay, FallbackValue='0900000000'}"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>

                    </StackPanel>

                    <!-- Gender -->
                    <StackPanel HorizontalAlignment="Stretch"
                                Height="50"
                                Style="{StaticResource IconTextItem}">
                        
                        <materialDesign:PackIcon Kind="Account"
                                                 Width="30"
                                                 Height="30"
                                                 Margin="0 0 10 0"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        
                        <TextBlock Text="{Binding Person.Gender, FallbackValue='الجنس'}"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>

                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </materialDesign:Card>

</Window>
