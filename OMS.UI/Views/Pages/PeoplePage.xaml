<Page x:Class="OMS.UI.Views.Pages.PeoplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:local="clr-namespace:OMS.UI.Views.Pages"
      xmlns:pages="clr-namespace:OMS.UI.ViewModels.Pages" 
      d:DataContext="{d:DesignInstance Type=pages:PeoplePageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PeoplePage"
      FlowDirection="RightToLeft"
      FontFamily="LBC">

    <Page.Resources>
        <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header مع تصميم Material Design -->
        <materialDesign:Card Grid.Row="0" 
                      Background="{StaticResource PageHeaderGradient}"
                      UniformCornerRadius="0"
                         Height="54">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountGroup" 
                                  Foreground="White"
                                  Width="30"
                                  Height="54"/>
                <TextBlock Text="قائمة الأشخاص"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="10 0 0 0"
                   VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- محتوى Dashboard -->
        <ScrollViewer Grid.Row="1" Margin="5" VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!-- بطاقة إحصائية -->

                <!-- بطاقة أخرى -->

                <!-- بطاقة أخرى -->

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
