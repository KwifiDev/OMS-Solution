<Page x:Class="OMS.UI.Views.Pages.RevenuesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:local="clr-namespace:OMS.UI.Views.Pages"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:pages="clr-namespace:OMS.UI.ViewModels.Pages"
      xmlns:converters="clr-namespace:OMS.UI.Converters"
      d:DataContext="{d:DesignInstance Type=pages:RevenuesPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FlowDirection="RightToLeft"
      FontFamily="LBC"
      Title="RevenuesPage"
      Name="PGRevenues">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/RevenuesListViewStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/PageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:VisiblilityUIConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}" />
            <i:ControlStoryboardAction Storyboard="{StaticResource PageLoadAnimation}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" 
                 Background="{StaticResource PageHeaderGradient}"
                 UniformCornerRadius="0"
                 Height="54">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <materialDesign:PackIcon Kind="Money" 
                             Foreground="White"
                             Width="30"
                             Height="54"/>

                <TextBlock Text="قائمة العائدات"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="10 0 0 0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>

        <Grid Grid.Row="1">
             
            <ListView x:Name="revenuesList"
                  Margin="0 0 5 0"
                  Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  ItemTemplate="{StaticResource RevenueItemTemplate}"
                  ItemContainerStyle="{StaticResource MaterialDesignNavigationPrimaryListBoxItem}"
                  Style="{StaticResource MaterialListView}"
                  materialDesign:RippleAssist.Feedback="#10000000">

            <ListView.ContextMenu>
                <ContextMenu Style="{StaticResource MaterialDesignContextMenu}">

                    <MenuItem Header="اضافة عائد" 
                       Command="{Binding AddItemCommand}"
                       Icon="{materialDesign:PackIcon Kind=ShopAlert}"/>

                    <MenuItem Header="تعديل العائد" 
                       Command="{Binding EditItemCommand}" 
                       CommandParameter="{Binding SelectedItem}"
                       Icon="{materialDesign:PackIcon Kind=ShopEdit}"/>

                    <MenuItem Header="حذف العائد" 
                       Command="{Binding DeleteItemCommand}" 
                       CommandParameter="{Binding SelectedItem}"
                       Icon="{materialDesign:PackIcon Kind=ShopRemove}"
                       Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>

                    <Separator Style="{StaticResource MaterialDesignSeparator}"/>

                    <MenuItem Header="تحديث" 
                       Command="{Binding LoadDataCommand}"
                       Icon="{materialDesign:PackIcon Kind=Refresh}"/>

                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

            <Border Background="White" Visibility="{Binding LoadingService.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Height="50"
                      Width="50"
                      Margin="5"
                      IsIndeterminate="True"
                      Style="{StaticResource MaterialDesignCircularProgressBar}"
                      Background="DeepSkyBlue"
                      Foreground="Snow"/>

                    <TextBlock Text="جاري تحميل البيانات..." 
                    Foreground="Black"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Center"
                    FontSize="16"/>
                </StackPanel>
            </Border>
            
        </Grid>
        

    </Grid>
</Page>
