<Page x:Class="OMS.UI.Views.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OMS.UI.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FlowDirection="RightToLeft"
      FontFamily="LBC"
      Title="مرحباً بك في نظام إدارة العمليات"
      Background="#f8f9fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="10" CornerRadius="0,0,10,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Office Managment System" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Text Content -->
            <StackPanel Grid.Column="0" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="0,0,20,0">

                <TextBlock Text="أهلاً وسهلاً بك" 
                          FontSize="24" 
                          FontWeight="SemiBold" 
                          Foreground="#2c3e50"
                          TextAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="نشكرك لاختيارك نظام إدارة المكاتب المتكامل" 
                          FontSize="18" 
                          Foreground="#555"
                          LineHeight="28"
                          Margin="0,0,0,30"
                          TextWrapping="Wrap"
                          MaxWidth="300"
                          TextAlignment="Center"/>

              

            </StackPanel>

            <!-- GIF Image Section -->
            <Border Grid.Column="1" 
                   Background="White" 
                   CornerRadius="10" 
                   Padding="10"
                   BorderThickness="1"
                   BorderBrush="#ddd"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <!-- GIF Image -->
                    <Image x:Name="WelcomeGif"
                                  Source="pack://application:,,,/Resources/Images/Welcome.png" 
                                  Width="180" 
                                  Height="180"/>

                    <TextBlock Text="مرحباً بك!" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#2c3e50"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>

            </Border>

            <!-- Additional Info -->
            <StackPanel Grid.Column="2" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="20,0,0,0">

                <TextBlock Text="مميزات النظام:" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="#2c3e50"
                          Margin="0,0,0,15"/>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="• إدارة المكاتب بشكل مركزي" 
                              Foreground="#555"
                              FontSize="14"/>
                    <TextBlock Text="• تقارير متقدمة وتحليلات" 
                              Foreground="#555"
                              FontSize="14"/>
                    <TextBlock Text="• واجهة مستخدم سهلة الاستخدام" 
                              Foreground="#555"
                              FontSize="14"/>
                    <TextBlock Text="• دعم فني متكامل" 
                              Foreground="#555"
                              FontSize="14"/>
                </StackPanel>

            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="15">
            <TextBlock Text="© 2025 نظام إدارة المكاتب. جميع الحقوق محفوظة." 
                      Foreground="#7f8c8d" 
                      FontSize="12"
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>