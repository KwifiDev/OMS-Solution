<UserControl x:Class="OMS.UI.Views.UserControls.PaginationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OMS.UI.Views.UserControls" 
             xmlns:usercontrols="clr-namespace:OMS.UI.ViewModels.UserControls" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150"
             FontFamily="LBC">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/PersonDetailsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">

            <!-- زر الصفحة الأولى -->
            <Button Command="{Binding FirstPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="0">
                <materialDesign:PackIcon Kind="PageFirst" Width="20" Height="20" Foreground="White"/>
            </Button>

            <!-- زر الصفحة السابقة -->
            <Button Command="{Binding PreviousPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="0">
                <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20" Foreground="White"/>
            </Button>

            <!-- عرض رقم الصفحة الحالي -->
            <TextBlock Text="{Binding PaginationInfo.CurrentPage, FallbackValue='1'}" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold" 
                       Margin="5,0"/>

            <TextBlock Text="/"
                       VerticalAlignment="Center"/>

            <TextBlock Text="{Binding PaginationInfo.TotalPages, FallbackValue='10'}" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold" 
                       Margin="5,0"/>

            <!-- زر الصفحة التالية -->
            <Button Command="{Binding NextPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="0">
                <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20" Foreground="White"/>
            </Button>

            <!-- زر الصفحة الأخيرة -->
            <Button Command="{Binding LastPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="0">
                <materialDesign:PackIcon Kind="PageLast" Width="20" Height="20" Foreground="White"/>
            </Button>
        </StackPanel>

    </Grid>

</UserControl>
