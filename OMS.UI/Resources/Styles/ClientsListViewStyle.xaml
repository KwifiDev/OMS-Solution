<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:OMS.UI.Converters"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <converters:WidthValueConverter x:Key="Width"/>
    <converters:HasAccountPhotoConverter x:Key="AccountIcon"/>

    <!-- LoadAnimation Style -->
    <Storyboard x:Key="PageLoadAnimation">
        <DoubleAnimation Storyboard.TargetName="clientsList" 
                      Storyboard.TargetProperty="Opacity"
                      From="0" To="1" Duration="0:0:0.5"/>
    </Storyboard>

    <!-- ListView Style -->
    <Style x:Key="MaterialListView" TargetType="ListView" BasedOn="{StaticResource MaterialDesignListView}">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="materialDesign:ListViewAssist.ListViewItemPadding" Value="8 4"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <!-- DataTemplate Style -->
    <DataTemplate x:Key="ClientItemTemplate">
        <materialDesign:Card
            BorderThickness="1"
            Padding="14"
            Margin="2"
            UniformCornerRadius="16"
            Width="{Binding ElementName=PGClients, Path=ActualWidth, Converter={StaticResource Width}}"
            Background="{StaticResource MaterialDesignLightSeparatorBackground}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Profile Icon -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Person"
                                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                                             Width="48"
                                             Height="48"
                                             Grid.Column="0"
                                             Margin="0 0 16 0"/>

                    <materialDesign:PackIcon Kind="{Binding AccountId, Converter={StaticResource AccountIcon}}"
                                             Foreground="DarkOrange"
                                             Width="16"
                                             Height="16"
                                             Grid.Column="0"
                                             Margin="0 0 16 0"/>
                </StackPanel>
               
                

                <!-- Personal Info -->
                <StackPanel Grid.Column="1" Margin="8">
                    <TextBlock 
                        Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                        Text="الأسم الكامل"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                    <Separator/>
                    <TextBlock 
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        Text="{Binding FullName}"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>


                <StackPanel Grid.Column="2"  Margin="8">
                    <TextBlock 
                        Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                        Text="نوع العميل"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                    <Separator/>
                    <TextBlock 
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        Text="{Binding ClientTypeDisplay}"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>

                <!-- Contact Info -->
                <StackPanel Grid.Column="1" Grid.Row="1" Margin="8">
                    <TextBlock 
                        Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                        Text="رقم الهاتف"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                    <Separator/>
                    <TextBlock 
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        Text="{Binding PhoneDisplay}"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="1" Margin="8">
                    <TextBlock 
                        Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                        Text="اجمالي الديون"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                    <Separator/>
                    <TextBlock 
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        Text="{Binding TotalDebtsDisplay, StringFormat={}{0:0}}"
                        Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel 
                    Grid.Column="4" Grid.RowSpan="2" 
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="8 0 0 0">

                    <Button 
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Command="{Binding DataContext.ShowDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}"
                        Padding="3"
                        ToolTip="عرض التفاصيل">
                        <materialDesign:PackIcon Kind="AccountDetails" Width="20" Height="20"/>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}"
                        ToolTip="تعديل"
                        Padding="3"
                        Margin="3 0 0 0">
                        <materialDesign:PackIcon Kind="Edit" Width="20" Height="20"/>
                    </Button>

                    <Button 
                        Style="{StaticResource MaterialDesignFlatDarkButton}"
                        Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}"
                        ToolTip="حذف"
                        Margin="3 0 0 0"
                        Padding="3"
                        Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                        <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </DataTemplate>

</ResourceDictionary>